<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40sp"
    android:orientation="horizontal"
    android:background="@drawable/selector_listview_item_split" >

    <TextView
        android:id="@+id/report_record_lv_number"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_horizontal|center_vertical"
        android:text="1"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/report_record_lv_result"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_horizontal|center_vertical"
        android:text="正常"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/report_record_lv_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_horizontal|center_vertical"
        android:text="张三"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/report_record_lv_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_horizontal|center_vertical"
        android:text="2014-02-18  23:35:43"
        android:textSize="14sp" />

</LinearLayout>